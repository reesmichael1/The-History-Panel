{
    "manifest_version": 2,
    "name": "The History Panel",
    "developer": {
        "name": "reesmichael1"
    },
    "icons": {
        "128": "./images/icon128.png"
    },
    "description": "An extension that puts the browser history in the sidebar, sorted by date.",
    "version": "0.0.3",
    "background": {"scripts": ["background.js"]},

    "permissions": ["history"],
    "sidebar_action": {
        "default_icon": "./images/icon128.png",
        "default_title": "The History Panel",
        "default_panel": "panel.html"
    }
}
